# Backend Development Dockerfile for Mail CRM
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies and development tools
RUN apk add --no-cache \
    postgresql-client \
    curl \
    git

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
